<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
<div class="container">
      <h1 id="page-heading">
      <i class="fa-solid fa-address-book"></i>
      My Contacts List
    </h1>

    <div>
      <ul>
        <% for(let i of contact_list) { %>
        <li>
          <p><%= i.name %></p>
          <p><%= i.phone %>
            <!-- query -->
          <a class="closing-icon"   href="/delete-contact/?id=<%= i._id %>">x</a>  
          <!-- href="/delete-contact/<%= i.phone %>"   :- Params -->
          </p>
          
        </li>
        <% } %>
      </ul>
    </div>
    <div class="form-details">
    <form action="/create-contact" method="POST">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input type="number" name="phone" placeholder="Enter Phone" required />
      <button type="submit">Add</button>
    </form>
    </div>
</div>
    <script
      src="https://kit.fontawesome.com/79f5fc428c.js"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
